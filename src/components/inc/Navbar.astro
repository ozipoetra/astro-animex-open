---
import {siteConfig} from "../../config";
---
<script src="https://cdnjs.cloudflare.com/ajax/libs/darkreader/4.9.73/darkreader.min.js" integrity="sha512-j5fUBFEDn11XR31rCnQlyCSbaBO52vIF/wbhjMPpy0Sh/MeI79gXQ3b/RcNg2Qa+KsjvQdR53YaD6PD2iNY81g==" crossorigin="anonymous" referrerpolicy="no-referrer" is:inline></script>
  <div class="container position-sticky z-index-sticky top-0" transition:persist>
    <div class="row">
      <div class="col-12">
        <nav class="navbar navbar-expand-lg  blur shadow-blur border-radius-xl mt-4 top-0 z-index-3 shadow position-absolute my-3 start-0 end-0 mx-4">
          <div class="container-fluid px-0">
            <a class="navbar-brand font-weight-bolder ms-sm-3" href="/" title={ siteConfig.title }>
              { siteConfig.title }
            </a>
            <input type="checkbox" id="navbar-toggle-cbox">
            <label for="navbar-toggle-cbox" class="navbar-toggler shadow-none">
              <span class="navbar-toggler-icon pt-2">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
              </span>
            </label>
            <div class="collapse navbar-collapse py-lg-0 w-100" id="navigation">
              <ul class="navbar-nav navbar-nav-hover ms-auto">
                <li class="nav-item ms-lg-auto">
                  <a class="nav-link nav-link-icon me-2" href="#" title="Cari Anime">
                    <svg class="me-1" xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><path fill="grey" d="M416 208c0 45.9-14.9 88.3-40 122.7L502.6 457.4c12.5 12.5 12.5 32.8 0 45.3s-32.8 12.5-45.3 0L330.7 376c-34.4 25.2-76.8 40-122.7 40C93.1 416 0 322.9 0 208S93.1 0 208 0S416 93.1 416 208zM208 352a144 144 0 1 0 0-288 144 144 0 1 0 0 288z"/></svg>
                    <p class="d-inline text-sm z-index-1 font-weight-bold">Cari Anime</p>
                  </a>
                </li>
                <li class="nav-item ms-lg-auto">
                  <a class="nav-link nav-link-icon me-2" href="#" title="List Anime">
                    <svg class="me-1" xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512"><path fill="grey" d="M96 0C43 0 0 43 0 96V416c0 53 43 96 96 96H384h32c17.7 0 32-14.3 32-32s-14.3-32-32-32V384c17.7 0 32-14.3 32-32V32c0-17.7-14.3-32-32-32H384 96zm0 384H352v64H96c-17.7 0-32-14.3-32-32s14.3-32 32-32zm32-240c0-8.8 7.2-16 16-16H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16zm16 48H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16s7.2-16 16-16z"/></svg>
                    <p class="d-inline text-sm z-index-1 font-weight-bold">Index List</p>
                  </a>
                </li>
                <li class="nav-item ms-lg-auto">
                  <a class="nav-link nav-link-icon me-2" href="#" title="Kategori Anime">
                    <svg class="text-white me-1" xmlns="http://www.w3.org/2000/svg" height="16" width="16" viewBox="0 0 512 512"><path fill="grey" d="M40 48C26.7 48 16 58.7 16 72v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V72c0-13.3-10.7-24-24-24H40zM192 64c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zM16 232v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V232c0-13.3-10.7-24-24-24H40c-13.3 0-24 10.7-24 24zM40 368c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V392c0-13.3-10.7-24-24-24H40z"/></svg>
                    <p class="d-inline text-sm z-index-1 font-weight-bold">Kategori</p>
                  </a>
                </li>
                <li class="nav-item my-auto ms-3 ms-lg-0 pb-2">
                  <div class="form-check form-switch mb-0 me-2 mt-2 mt-md-0">
                    <input class="form-check-input" type="checkbox" role="switch" id="theme-switch" onclick="togglePreference()" data-darkmode>
                    <label class="form-check-label d-inline text-sm z-index-1 font-weight-bold" for="theme-switch">Dark Mode</label>
                  </div>
                </li>
             </ul>
            </div>
          </div>
        </nav>
        <!-- End Navbar -->
      </div>
    </div>
  </div>
<script src="/assets/js/darkmode.js" type="text/javascript" is:inline></script>

        
<style lang="css">
#navbar-toggle-cbox {
  display:none
}
#navbar-toggle-cbox:checked ~ .collapse {
    display: block;
}
</style>